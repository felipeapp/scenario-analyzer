<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<!--
# Superintendencia de Informatica - UFRN
# SIGAA 
# Arquivo de configuracao do Struts - Sistema de Mensagem
 -->
<struts-config>

    <form-beans>
		<form-bean name="mensagemForm" type="br.ufrn.sigaa.caixa_postal.struts.MensagemForm"/>
    </form-beans>

	<action-mappings>

		<action input="/tela_inicial.jsp" name="mensagemForm" path="/mensagem/verMensagem" scope="request" type="br.ufrn.sigaa.caixa_postal.struts.VisualizaMensagemAction" validate="false">
        	<forward name="verMensagem" path="/WEB-INF/jsp/caixa_postal/exibe_mensagem.jsp"/>
      	</action>

		<action path="/mensagem/showFolder" name="mensagemForm" scope="request" type="br.ufrn.sigaa.caixa_postal.struts.BuscaMensagensPastaAction">
			<forward name="caixa_postal" path="/WEB-INF/jsp/caixa_postal/caixa_postal.jsp"/>
		</action>

		<action path="/mensagem/readMessage" type="br.ufrn.sigaa.caixa_postal.struts.LerMensagemAction"/>

		<action path="/mensagem/caixaPostal" forward="/mensagem/showFolder.do"/>

		<action path="/mensagem/caixaSaida" type="br.ufrn.sigaa.caixa_postal.struts.CaixaSaidaAction">
        	<forward name="caixa_saida" path="/WEB-INF/jsp/caixa_postal/caixa_saida.jsp"/>
		</action>

       	<action input="/jsp/caixa_postal/envia_mensagem.jsp" name="mensagemForm" path="/mensagem/enviaMensagem" scope="request" type="br.ufrn.sigaa.caixa_postal.struts.EnviaMensagemAction" validate="true">
        	<forward name="envia_mensagem" path="/WEB-INF/jsp/caixa_postal/envia_mensagem.jsp"/>
            <forward name="patrimonio" path="/WEB-INF/jsp/caixa_postal/chamado_patrimonio.jsp"/>
            <forward name="chamado_sucesso" path="/WEB-INF/jsp/caixa_postal/chamado_sucesso.jsp"/>
            <forward name="entrada" path="/mensagem/showFolder.do?folder=inbox"/>
      	</action>

      	<action path="/mensagem/removeMensagem"
      		  validate="true"
      		  input="/mensagem/caixaPostal.do"
      		  scope="request"
      		  name="mensagemForm"
      		  type="br.ufrn.sigaa.caixa_postal.struts.EnviaMensagemAction">
        	<forward name="conf_remover" path="/WEB-INF/jsp/caixa_postal/conf_remocao.jsp"/>
      	</action>

    </action-mappings>

</struts-config>








		
      
      
      