<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<!-- 
# Superintendencia de Informatica - UFRN
# SIGAA - Sistema Integrado de Gestao de Atividades Academicas
# Arquivo de configuracao do Struts - PARAMETROS PESQUISA
 -->
<struts-config>

    <form-beans>
		<form-bean name="definirPeriodoSubmissaoProjetoForm"	type="br.ufrn.sigaa.arq.struts.SigaaForm">
			<form-property name="inicioPeriodoSubmissaoProjeto"	type="java.lang.String" />			
			<form-property name="fimPeriodoSubmissaoProjeto"	type="java.lang.String" />			
		</form-bean>			
    </form-beans>

    <action-mappings>

		<!-- Action para o caso de uso "Definir Periodo  de Submissao de Projetos -->
		<action path="/pesquisa/definirPeriodoSubmissaoProjeto" type="br.ufrn.sigaa.pesquisa.struts.ParametrosPesquisaActions" name="definirPeriodoSubmissaoProjetoForm" 
				input="/WEB-INF/jsp/pesquisa/definirperiodosubmissaoprojeto/form.jsp" parameter="definirPeriodoSubmissaoProjeto" validate="true">
			<forward name="sucesso" 			path="/WEB-INF/jsp/pesquisa/definirperiodosubmissaoprojeto/form.jsp" />
			<forward name="falha" 				path="/WEB-INF/jsp/pesquisa/definirperiodosubmissaoprojeto/form.jsp" />
		</action>

		<action path="/pesquisa/verPeriodoSubmissaoProjetoForm" forward="/WEB-INF/jsp/pesquisa/definirperiodosubmissaoprojeto/form.jsp" />
		
    </action-mappings>

</struts-config>

