<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<!-- 
# Superintendencia de Informatica - UFRN
# SIGAA - Sistema Integrado de Gestao de Atividades Academicas
# Arquivo de configuracao do Struts - SERVIDOR
 -->
<struts-config>

    <form-beans>
		<form-bean name="servidorForm" type="br.ufrn.sigaa.arq.struts.SigaaForm">
			<form-property name="id" 							type="java.lang.Integer" />
			<form-property name="siape" 				type="java.lang.Integer" />
			<form-property name="pessoa"				type="br.ufrn.sigaa.dominio.Pessoa" />						
		</form-bean>
    </form-beans>

    <action-mappings>

		<action path="/geral/criarServidor" type="br.ufrn.sigaa.struts.ServidorActions" name="servidorForm"
					 input="/geral/recarregarServidorForm.do" parameter="criar" validate="true">
			<forward name="sucesso" 			path="/geral/verServidorForm.do" />
			<forward name="falha" 				path=".geral.servidor/form.jsp" />
		</action>
		
		<action path="/geral/alterarServidor" type="br.ufrn.sigaa.struts.ServidorActions" name="servidorForm"
					 input="/geral/recarregarServidorForm.do" parameter="alterar" validate="true">
			<forward name="sucesso" 			path="/geral/listarServidores.do" />
			<forward name="falha" 				path=".geral.servidor/form.jsp" />
		</action>
		
		<action path="/geral/removerServidor" type="br.ufrn.sigaa.struts.ServidorActions" name="servidorForm" 
				parameter="remover" validate="false">
			<forward name="sucesso" 			path="/geral/listarServidores.do" />
			<forward name="falha" 				path=".geral.servidor/form.jsp" />
		</action>
		
		<action path="/geral/listarServidores" type="br.ufrn.sigaa.struts.ServidorActions" name="servidorForm" 
				parameter="listar" validate="false">
			<forward name="sucesso" 			path=".geral.servidor/busca.jsp" />
			<forward name="busca"           	path=".geral.servidor/busca.jsp"/>
		</action>
		
		<action path="/geral/detalharServidor" type="br.ufrn.sigaa.struts.ServidorActions" name="servidorForm" 
				parameter="detalhar" validate="false">
			<forward name="sucesso" 			path=".geral.servidor/form.jsp" />
			<forward name="visualizacao"		path=".geral.servidor/form.jsp" />
		</action>

		<action path="/geral/verServidorForm" forward="/geral/detalharServidor.do?acao=criar" />
		<action path="/geral/verServidor" forward="/geral/detalharServidor.do?acao=visualizar" />
		<action path="/geral/recarregarServidorForm" forward="/geral/detalharServidor.do?acao=recarregar" />

		<action path="/geral/buscarNomeServidor" name="servidorForm" validate="false" forward="/geral/listarServidores.do?forward=busca" />
		<action path="/geral/verTelaBuscaServidor" forward=".geral.servidor/busca.jsp" />
				
    </action-mappings>

</struts-config>