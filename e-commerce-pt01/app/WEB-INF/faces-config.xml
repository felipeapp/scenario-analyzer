<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
    
    <application>
	 	<locale-config><default-locale>pt_BR</default-locale></locale-config>
	 	<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	</application>
    
    <component>
    	<display-name>Mensagens</display-name>
    	<component-type>ECOMMERCE_MENSAGENS_COMPONENT</component-type>
    	<component-class>
    		br.com.ecommerce.arq.jsf.components.MensagensComponent
    	</component-class>
    </component>
    
    <render-kit>
    	<renderer>
    		<description>
    			Renderizador do componente de mensagens
    		</description>
    		<component-family>
    			ECOMMERCE_MENSAGENS_FAMILY
    		</component-family>
    		<renderer-type>
    			ECOMMERCE_MENSAGENS_RENDERER
    		</renderer-type>
    		<renderer-class>
    			br.com.ecommerce.arq.jsf.components.MensagensRenderer
    		</renderer-class>
    	</renderer>
    </render-kit>
</faces-config>
