<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<!--
# Superintendencia de Informatica - UFRN
# SIGAA - Sistema Inteteco de Gestao de TecDisciplinas Academicas
# Arquivo de configuracao do Struts - DISCIPLINA DE Tï¿½CNICO
 -->
<struts-config>

    <form-beans>

		<!-- Forms de Lato Sensu  -->
		<form-bean name="formOutrosDocumentos"		 		type="br.ufrn.sigaa.ensino.latosensu.form.OutrosDocumentosForm"/>
		<form-bean name="formSituacaoProposta"		 		type="br.ufrn.sigaa.ensino.latosensu.form.SituacaoPropostaForm"/>
		<form-bean name="usuarioForm"						type="br.ufrn.sigaa.form.UsuarioForm" />

    </form-beans>

	<action-mappings>

		<action path="/*/*/cadastro*" type="br.ufrn.sigaa.arq.struts.AbstractCrudAction"
			name="form{3}" parameter="dispatch" scope="request" validate="false">
			<forward name="form" path="/WEB-INF/jsp/{1}/{2}/{3}/form.jsp"/>
			<forward name="listar" path="/WEB-INF/jsp/{1}/{2}/{3}/lista.jsp"/>
			<forward name="view" path="/WEB-INF/jsp/{1}/{2}/{3}/view.jsp"/>
		</action>

		<action path="/*/cadastro*" type="br.ufrn.sigaa.arq.struts.AbstractCrudAction"
			name="form{2}" parameter="dispatch" scope="request" validate="false">
			<forward name="form" path="/WEB-INF/jsp/{1}/{2}/form.jsp"/>
			<forward name="listar" path="/WEB-INF/jsp/{1}/{2}/lista.jsp"/>
			<forward name="view" path="/WEB-INF/jsp/{1}/{2}/view.jsp"/>
		</action>

		<action path="/*/*/wizard*?_target*" type="br.ufrn.sigaa.arq.struts.AbstractWizardAction">
			<forward name="page{4}" path="/WEB-INF/jsp/{1}/{2}/{3}/page{4}.jsp"/>
			<forward name="finish" path="/WEB-INF/jsp/{1}/{2}/{3}/finish.jsp"/>
		</action>

		<action path="/buscarDestinatario"
			type="br.ufrn.sigaa.struts.ListarUsuariosAction"
			name="usuarioForm" scope="request" validate="false"
			parameter="POPUP">
			<forward name="listarUsuarios" path="/WEB-INF/jsp/caixa_postal/busca_usuario.jsp" />
		</action>


    </action-mappings>

</struts-config>