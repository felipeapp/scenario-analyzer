<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<!--
# Superintendencia de Informatica - UFRN
# SIGAA - Sistema Integrado de Gestao de Atividades Academicas
# Arquivo de configuracao do Struts - A��ES COMUNS ENTRE OS N�VEIS DE ENSINO
 -->
<struts-config>

    <form-beans>
		<form-bean name="formOrientacaoDiscente"		type="br.ufrn.sigaa.ensino.form.OrientacaoDiscenteForm"/>
		<form-bean name="formCoordenacaoCurso" 			type="br.ufrn.sigaa.ensino.form.CoordenacaoCursoForm"/>
		<form-bean name="formHorario" 					type="br.ufrn.sigaa.ensino.form.HorarioForm"/>

   		<form-bean name="formDocumentoLegal"			type="br.ufrn.sigaa.ensino.form.DocumentoLegalForm"/>
		<form-bean name="turmaForm" 					type="br.ufrn.sigaa.ensino.form.TurmaForm"/>
		<form-bean name="formAfastamentoAluno" 			type="br.ufrn.sigaa.ensino.form.MovimentacaoAlunoForm"/>
		<form-bean name="cadastroAvaliacaoForm" 		type="br.ufrn.sigaa.ensino.form.CadastroAvaliacaoForm"/>
		<form-bean name="consolidarTurmaForm" 			type="br.ufrn.sigaa.ensino.consolidacao.form.ConsolidarTurmaForm"/>
		<form-bean name="formAproveitamentoDisciplina" 	type="br.ufrn.sigaa.ensino.form.AproveitamentoDisciplinaForm"/>
		<form-bean name="formAlteracaoMatricula" 		type="br.ufrn.sigaa.ensino.form.AlteracaoMatriculaForm"/>
		<form-bean name="matriculaTecnicoForm" 			type="br.ufrn.sigaa.ensino.form.MatriculaTecnicoForm"/>
		<form-bean name="formRegistroAtividade" 		type="br.ufrn.sigaa.ensino.form.RegistroAtividadeForm"/>

		<form-bean name="disciplinaForm" 				type="br.ufrn.sigaa.ensino.form.DisciplinaForm"/>
		<form-bean name="discenteForm" 					type="br.ufrn.sigaa.ensino.form.DiscenteForm" />
		<form-bean name="pessoaForm" 					type="br.ufrn.sigaa.form.PessoaForm" />
		<form-bean name="cursoVeiculacaoEadForm" 		type="br.ufrn.sigaa.ensino.form.CursoVeiculacaoEadForm" />
    </form-beans>

	<global-forwards>
		<forward name="dadosPessoais" 	path="/WEB-INF/jsp/geral/pessoa/dados_pessoais.jsp" />
	</global-forwards>

    <action-mappings>

		<action path="/ensino/cadastroOrientacaoDiscente" type="br.ufrn.sigaa.ensino.struts.OrientacaoDiscenteAction"
				name="formOrientacaoDiscente" parameter="dispatch" >
			<forward name="form"			path="/WEB-INF/jsp/ensino/orientacao_discente/form.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/orientacao_discente/lista.jsp" />
		</action>

		<action path="/ensino/cadastroCoordenacaoCurso" type="br.ufrn.sigaa.ensino.struts.CoordenacaoCursoAction"
				name="formCoordenacaoCurso" parameter="dispatch" >
			<forward name="form"			path="/WEB-INF/jsp/ensino/coordenacao_curso/form.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/coordenacao_curso/lista.jsp" />
		</action>

		<action path="/ensino/cadastroAproveitamentoDisciplina" type="br.ufrn.sigaa.ensino.struts.AproveitamentoAction"
				name="formAproveitamentoDisciplina" parameter="dispatch" >
			<forward name="form"			path="/WEB-INF/jsp/ensino/aproveitamento_disciplina/form.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/aproveitamento_disciplina/lista.jsp" />
		</action>

		<action path="/ensino/cadastroDocumentoLegal" type="br.ufrn.sigaa.ensino.struts.DocumentoLegalAction"
				name="formDocumentoLegal" parameter="dispatch" >
			<forward name="form"			path="/WEB-INF/jsp/ensino/documento_legal/form.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/documento_legal/lista.jsp" />
		</action>

		<action path="/ensino/criarTurma" type="br.ufrn.sigaa.ensino.struts.TurmaAction" name="turmaForm"
				parameter="dispatch">
			<forward name="horario"	 			path="/WEB-INF/jsp/ensino/turma/horarios.jsp" />
			<forward name="dadosGerais"	 			path="/WEB-INF/jsp/ensino/turma/dados_gerais.jsp" />
			<forward name="docentes"	 			path="/WEB-INF/jsp/ensino/turma/docentes.jsp" />
			<forward name="resumo"	 			path="/WEB-INF/jsp/ensino/turma/resumo.jsp" />
			<forward name="listar"	 			path="/WEB-INF/jsp/ensino/turma/lista.jsp" />
		</action>

		<action path="/ensino/registroAtividade" type="br.ufrn.sigaa.ensino.struts.RegistroAtividadeAction" name="formRegistroAtividade"
				parameter="dispatch">
			<forward name="form"	 		path="/WEB-INF/jsp/ensino/registro_atividade/form.jsp"/>
			<forward name="docente"	 		path="/WEB-INF/jsp/ensino/registro_atividade/insere_docente.jsp"/>
			<forward name="confirmar"	 	path="/WEB-INF/jsp/ensino/registro_atividade/resumo.jsp"/>
			<forward name="resumo"	 		path="/WEB-INF/jsp/ensino/registro_atividade/resumo.jsp"/>
		</action>

		<action path="/ensino/cadastroHorario" type="br.ufrn.sigaa.ensino.struts.HorarioAction" name="formHorario"
				parameter="dispatch">
			<forward name="listar"	 			path="/WEB-INF/jsp/ensino/horario/lista.jsp" />
			<forward name="form" 				path="/WEB-INF/jsp/ensino/horario/form.jsp"/>
		</action>

		<action path="/ensino/cadastroAfastamentoAluno" type="br.ufrn.sigaa.ensino.struts.MovimentacaoAlunoAction" name="formMovimentacaoAluno"
				parameter="dispatch" scope="request">
			<forward name="listar"	 			path="/WEB-INF/jsp/ensino/afastamento_aluno/lista.jsp" />
			<forward name="form" 				path="/WEB-INF/jsp/ensino/afastamento_aluno/form.jsp"/>
			<forward name="listar_afastados"	path="/WEB-INF/jsp/ensino/afastamento_aluno/lista_retorno.jsp" />
			<forward name="form_afastados"		path="/WEB-INF/jsp/ensino/afastamento_aluno/form_retorno.jsp"/>
		</action>

		<action path="/ensino/alterarMatriculaDisciplina" type="br.ufrn.sigaa.ensino.struts.AlteracaoMatriculaAction" name="formAlteracaoMatricula"
				parameter="dispatch">
			<forward name="discentes" 			 path="/WEB-INF/jsp/ensino/alteracao_matricula/discentes.jsp" />
			<forward name="matriculas"    path="/WEB-INF/jsp/ensino/alteracao_matricula/lista_matriculas.jsp"/>
			<forward name="confirmacao"	 path="/WEB-INF/jsp/ensino/alteracao_matricula/resumo.jsp" />
		</action>


		<!-- Atestado de Matricula -->
		<action path="/ensino/verAtestado"
			type="br.ufrn.sigaa.ensino.struts.AtestadoMatriculaAction"
			parameter="dispatch" validate="false">
			<forward name="selecao"
				path="/ensino/discente/wizard.do?dispatch=list" />
			<forward name="atestado"
				path="/WEB-INF/jsp/ensino/atestado_matricula/atestado.jsp" />
		</action>

		<!-- Historico -->
		<action path="/ensino/verHistorico"
			type="br.ufrn.sigaa.ensino.struts.HistoricoDiscenteActions"
			parameter="dispatch" validate="false">
			<forward name="selecao"
				path="/ensino/discente/wizard.do?dispatch=list" />
			<forward name="historico"
				path="/WEB-INF/jsp/ensino/historico/verHistorico.jsp" />
		</action>


<!--  =========================  -->

		<action path="/pessoa/wizard" type="br.ufrn.sigaa.struts.PessoaAction"
				name="pessoaForm" parameter="dispatch" scope="session">
			<forward name="dadosDiscente" 	path="/ensino/discente/wizard.do?dispatch=popular" />
			<forward name="detalhes" 		path="/WEB-INF/jsp/geral/pessoa/detalhes.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/geral/pessoa/lista.jsp" />
			<forward name="listaDiscente"	path="/ensino/discente/wizard.do?dispatch=list" />
		</action>

		<action path="/ensino/discente/wizard" type="br.ufrn.sigaa.ensino.struts.DiscenteAction"
				name="discenteForm" parameter="dispatch" scope="session">
			<forward name="dadosDiscenteTecnico" path="/ensino/tecnico/discente/form.jsf" redirect="true" />
			<forward name="dadosDiscenteLato" path="/lato/discente/form.jsf" redirect="true" />
			<forward name="dadosPessoais" path="/geral/pessoa/dados_pessoais.jsf" redirect="true"/>
			
			<forward name="dadosDiscente" path="/WEB-INF/jsp/ensino/discente/dados_discente.jsp" />
			<forward name="resumo"			path="/WEB-INF/jsp/ensino/discente/resumo.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/discente/lista.jsp" />
			<forward name="cad_sucesso"		path="/pessoa/wizard.do?dispatch=popular" />
			<forward name="relatorio"		path="/ensino/relatorios/alunos_curso.jsp" />
			<!-- forward 'dadosPessoais'  global! -->
		</action>

		<action path="/ensino/cadastroDisciplina" type="br.ufrn.sigaa.ensino.struts.DisciplinaAction"
				name="disciplinaForm" parameter="dispatch" >
			<forward name="form"			path="/WEB-INF/jsp/ensino/disciplina/form.jsp" />
			<forward name="listar"			path="/WEB-INF/jsp/ensino/disciplina/lista.jsp" />
			<forward name="resumo"			path="/WEB-INF/jsp/ensino/disciplina/resumo.jsp" />
		</action>

		<action path="/ensino/ead/cadastroVeiculacoesCurso" type="br.ufrn.sigaa.ensino.struts.CursoVeiculacaoEadAction"
				name="cursoVeiculacaoEadForm" parameter="dispatch">
			<forward name="listar_veiculacoes"	path="/WEB-INF/jsp/ensino/ead/CursoVeiculacao/lista_veiculacoes.jsp" />
			<forward name="listar"			    path="/WEB-INF/jsp/ensino/ead/CursoVeiculacao/lista.jsp" />
		</action>


		<action path="/ensino/gerarCertificado" type="br.ufrn.sigaa.ensino.struts.CertificadoAction"
			name="discenteForm" parameter="dispatch">
			<forward name="escolhe" path="/WEB-INF/jsp/ensino/certificado/aluno.jsp"/>
		</action>

    </action-mappings>

</struts-config>