<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

	<lifecycle>
		<phase-listener>
		br.ufrn.arq.web.jsf.AbstractPhaseListener
		</phase-listener>
	</lifecycle>
	
	<application>
	 	
	 	<locale-config><default-locale>pt_BR</default-locale></locale-config>
	 	<variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	 	<message-bundle>br.ufrn.arq.web.jsf.Mensagens_pt_br</message-bundle>
	 	
	 	<resource-bundle>
	        <base-name>br.ufrn.sigaa.sites.jsf.links_publico</base-name>
	        <var>linkPublico</var>
		</resource-bundle>
	 	
	</application>
	
	
	<!-- Conversores -->
	<converter>
    	<converter-id>convertCpf</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.CpfConverter</converter-class>
    </converter>

	<converter>
    	<converter-id>convertCep</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.CepConverter</converter-class>
    </converter>

	<converter>
    	<converter-id>convertSimNao</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.SimNaoConverter</converter-class>
    </converter>   

    <converter>
    	<converter-id>convertHora</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.HoraConverter</converter-class>
    </converter>

	<converter>
    	<converter-id>convertNota</converter-id>
    	<converter-class>br.ufrn.sigaa.arq.jsf.NotaConverter</converter-class>
    </converter>
    
    <converter>
    	<converter-id>convertData</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.DateConverter</converter-class>
    </converter>

    <converter>
    	<converter-id>convertMoeda</converter-id>
    	<converter-class>br.ufrn.arq.web.jsf.ValorMoedaConverter</converter-class>
    </converter>
    
    <converter>
    	<converter-id>convertAlternativa</converter-id>
    	<converter-class>br.ufrn.sigaa.questionario.jsf.AlternativaConverter</converter-class>
    </converter>
    
      <converter>
    	<converter-id>convertAlternativaPerguntaQuestionarioTurma</converter-id>
    	<converter-class>br.ufrn.sigaa.questionario.jsf.AlternativaPerguntaQuestionarioTurmaConverter</converter-class>
    </converter>

	<converter>
		<converter-for-class>java.lang.String</converter-for-class>
		<converter-class>br.ufrn.arq.web.jsf.StringConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>convertTexto</converter-id>
		<converter-class>br.ufrn.arq.web.jsf.TextoConverter</converter-class>
	</converter>
	
	<converter>
		<converter-id>convertNivelEnsino</converter-id>
		<converter-class>br.ufrn.sigaa.ensino.jsf.NivelEnsinoConverter</converter-class>
	</converter>
	
	<converter>
    	<converter-id>colorPickerConverter</converter-id>
    	<converter-class>br.ufrn.sigaa.cv.jsf.ColorPickerConverter</converter-class>
    </converter>

	<managed-bean>
		<managed-bean-name>autenticidade</managed-bean-name>
		<managed-bean-class>br.ufrn.arq.seguranca.autenticacao.ValidacaoMBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>confirmaSenha</managed-bean-name>
		<managed-bean-class>br.ufrn.sigaa.arq.jsf.ConfirmaSenhaMBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>util</managed-bean-name>
		<managed-bean-class>br.ufrn.arq.web.jsf.UtilMBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>dadosCadastrais</managed-bean-name>
		<managed-bean-class>br.ufrn.comum.jsf.DadosCadastraisMBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<converter>
	  <converter-for-class>java.lang.Enum</converter-for-class>
	  <converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>
	
</faces-config>
