<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="br.ufrn.sigaa.rh.dominio.Designacao"
        table="DESIGNACAO" schema="rh" dynamic-update="false" dynamic-insert="false">

        <id name="id" column="ID_DESIGNACAO" type="int" unsaved-value="0">
            <generator class="sequence">
            	<param name="sequence">general_seq</param>
            </generator>
        </id>

        <property name="inicio" type="java.util.Date" update="true"
            insert="true" access="property" column="INICIO" not-null="false"/>

        <property name="fim" type="java.util.Date" update="true"
            insert="true" access="property" column="FIM" not-null="false"/>

		<many-to-one fetch="join" name="atividade" class="br.ufrn.rh.dominio.AtividadeServidor" cascade="none"
        	outer-join="false" update="true" insert="true" access="property"
	        column="ID_ATIVIDADE"/>

		<many-to-one fetch="join" name="servidorSigaa" class="br.ufrn.sigaa.pessoa.dominio.Servidor" cascade="none"
        	outer-join="false" update="true" insert="true" access="property"
	        column="ID_SERVIDOR"/>

		<many-to-one fetch="join" name="unidadeDesignacao" class="br.ufrn.sigaa.dominio.Unidade" cascade="none"
        	outer-join="false" update="true" insert="true" access="property"
	        column="ID_UNIDADE"/>

	    <property name="unidade" type="java.lang.String" update="true"
            insert="true" access="property" column="NOME_UNIDADE" not-null="false"/>
            
        <property name="gerencia" type="java.lang.String" update="true"
            insert="true" access="property" column="GERENCIA" not-null="false"/>
            
        <property name="remuneracao" type="boolean" update="true"
            insert="true" access="property" column="REMUNERACAO" not-null="false"/>

    </class>

</hibernate-mapping>